---
import HeadCircuitImage from "../../assets/HeadCircuit.svg";
import UsersThreeImage from "../../assets/UsersThree.svg";
import StatsContainer from "./StatsContainer.astro";
import shapeImage from "../../assets/2_b.webp";
import StarImage from "../../assets/Star.svg";

const { frame } = Astro.props;
---

<div class="frame">
  <StatsContainer
    number="200"
    iconImg={HeadCircuitImage}
    iconImgAlt="Head Circuit"
    description="Lorem ipsum dolor sit amet"
    img={shapeImage}
    __component="shared.stats-container-big"
  />
  <StatsContainer
    number="120"
    iconImg={StarImage}
    iconImgAlt="Star"
    description="Lorem ipsum dolor sit amet"
  />
  <StatsContainer
    number="10"
    iconImg={UsersThreeImage}
    iconImgAlt="Users Three"
    description="Lorem ipsum dolor sit amet"
  />
</div>

<style>
  .frame {
    display: flex;
    gap: 0.9375rem;
    max-width: 1200px;
    margin-inline: auto;
    margin-top: 3.75rem;
  }
</style>
